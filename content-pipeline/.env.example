# OpenAI
OPENAI_API_KEY=sk-...

# Reddit OAuth (create app at reddit.com/prefs/apps)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
# Use EITHER refresh token OR username+password:
REDDIT_REFRESH_TOKEN=
REDDIT_USERNAME=
REDDIT_PASSWORD=
REDDIT_USER_AGENT=autonateai-scraper/1.0

# YouTube Data API v3
YOUTUBE_API_KEY=

# Apify (for LinkedIn scraping - get token at console.apify.com)
APIFY_API_TOKEN=

# Firebase (optional, defaults to ~/firebase-admin-key.json)
FIREBASE_SERVICE_ACCOUNT_PATH=

# Logging
LOG_LEVEL=info
