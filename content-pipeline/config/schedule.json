  "generation": {
    "stage1Model": "gpt-4o-mini",
    "stage2Model": "gpt-4o",
    "temperature": {
      "stage1": 0.3,
      "stage2": 0.7
    },
    "maxTokens": {
      "stage1": 1000,
      "stage2": 2000
    }
  }
}
